mixin global_headstuff(options)
	meta(content="utf-8")

	// google, open web stuff
	title!= options.title
	link(href="/css/main.css", rel="stylesheet")
	link(rel="shortcut icon", type="image/x-icon", href!=options.favicon)
	link(rel="alternate",type="application/rss+xml", title="",href="/feed")
	meta(name="description", content=options.description)
	meta(name="google-site-verification", content="")

	// Facebook Stuff
	meta(property="og:image", content=options.fb_image)
	meta(property="og:title", content=options.fb_title)
	meta(property="og:description", content=options.fb_description)
	meta(property="og:url", content=options.fb_url)
	meta(property="og:site_name", content=options.fb_sitename)
	meta(property="og:type", content=options.fb_type)

	// Apple Stuff
	meta(name="viewport", content="width=device-width, user-scalable=no, maximum-scale=1.0, minimum-scale=1.0")
	meta(name="apple-mobile-web-app-status-bar-style", content="black")
	link(rel="apple-touch-icon", href=options.appletouchicon)
